<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shariqkhan.gawadar247.FormActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="#fff">

        <TextView
            android:id="@+id/tollbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Plot Details"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="21sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"

            >


            <LinearLayout
                android:id="@+id/formButtonLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/toolbar"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="NotSibling">

                <Button
                    android:id="@+id/formSalesButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/pressed"
                    android:text="Sales"
                    android:textAllCaps="false"
                    android:textColor="#fff"

                    />

                <Button
                    android:id="@+id/formWantedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/not_pressed_candr"
                    android:text="Wanted"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editTextLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/formButtonLinearLayout"

                >

                <LinearLayout
                    android:id="@+id/linearLayoutOfFirst3edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_grey_border_bottom"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/schemeTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="Scheme"
                            android:textSize="12sp" />

                        <EditText

                            android:id="@+id/SchemeEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:focusable="false"
                            android:background="@drawable/white_grey_border_bottom"
                            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:hint="Type your scheme"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/white_grey_border_bottom"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/streetTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/schemeTextView"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="Street"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/StreetEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/white_grey_border_bottom"
                            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:hint="Type your Street"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:focusable="false"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPlot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_grey_border_bottom"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="4">

                        <TextView

                            android:id="@+id/plotTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"

                            android:paddingBottom="13dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="Plot"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/plotEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_weight="3"
                            android:background="@drawable/white_grey_border_bottom"
                            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:hint="Select plot"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:focusable="false"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_alignStart="@+id/formButtonLinearLayout"
                android:layout_below="@+id/editTextLinear"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/selectionCorR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="-3dp"

                        android:paddingBottom="17dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:text="Type"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/commercial"
                        android:layout_width="130dp"
                        android:layout_height="40dp"

                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/Residential"
                        android:background="@drawable/not_pressed"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="Commercial"
                        android:textAllCaps="false"


                        android:textSize="11sp" />


                    <Button
                        android:id="@+id/Residential"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/round_pressed"

                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="Residential"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        tools:ignore="NotSibling" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:weightSum="4">

                <TextView
                    android:id="@+id/areaTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"

                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"

                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Area"
                    android:textSize="12sp" />

                <EditText

                    android:id="@+id/areaEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="3"
                    android:background="@drawable/white_grey_border_bottom"
                    android:hint="Area"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearType"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_grey_border_bottom"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/TypeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"

                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"

                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Type"
                    android:textSize="12sp" />

                <EditText

                    android:id="@+id/TypeEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="3"
                    android:background="@drawable/white_grey_border_bottom"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:hint="Type"
                    android:maxLines="1"
                    android:paddingBottom="17dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:paddingTop="15dp"
                    android:textSize="12sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/saleFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearType"
                android:animateLayoutChanges="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linearPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/frameLayout"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/white_grey_border_bottom"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/priceTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"

                            android:paddingBottom="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="Price"

                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/priceofframeEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:inputType="number"
                            android:layout_weight="3"
                            android:background="@drawable/white_grey_border_bottom"
                            android:hint="Enter Price"
                            android:maxLines="1"

                            android:paddingBottom="16dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/comission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearPrice"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/ComissionTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="5dp"

                            android:paddingTop="15dp"
                            android:text="Comission(1%):"

                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/demoPriceComission"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="3"
                            android:paddingBottom="15dp"
                            android:paddingRight="10dp"
                            android:paddingStart="15dp"
                            android:paddingTop="15dp"
                            android:text="-"
                            android:textSize="12sp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/TotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/comission"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/TotalTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:paddingBottom="15dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="Total Price:"

                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/demoTotalPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_weight="3"
                            android:paddingBottom="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:text="-"

                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/submitbutton"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TotalPrice"
                        android:layout_centerInParent="true"
                        android:background="@drawable/pressed"
                        android:padding="15dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/wantedFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/linearType"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/submitbutton2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TotalPrice"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/pressed"
                    android:padding="15dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

